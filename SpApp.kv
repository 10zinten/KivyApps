# File name : main.py
#: kivy 1.7.2
#: import random random

<ScatterTextWidget>:
    orientation: 'horizontal'
    canvas:
        Color:
            rgba: root.text_colour
        Rectangle:
            pos: self.pos
            size: self.size
    TextInput:
        id: my_textinput
        font_size: 150
        size_hint_y: None
        height: 200
        text: 'Party Night'
        on_text: root.change_label_colour()
        # without calling py function my_label.color = [random.random() for i in xrange(3)] + [1]
        # calling python function from kivy side
        # root refer to the most top level widget of the widgets tree
    FloatLayout:
        Scatter:
            Label:
                id: my_label
                text: my_textinput.text
                font_size: my_textinput.font_size
                color: root.text_colour
